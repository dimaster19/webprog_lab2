/* Аккордион на product.hmtl */

.acor-container {
    
    width: 350px;
   
}
.acor-container .acor-body {
   
    margin: 0 auto;
    height: 0;
    color: rgb(0,179,241);
    background-color: #ffffff;
    line-height: 18px;
    padding: 0 30px;
    box-sizing: border-box;
    transition: padding 0.5s;
    overflow: hidden;
    font-size: 16px;

}
.acor-container .acor-body p {
    margin: 0 0 10px;
}
.acor-container label {
    text-transform: uppercase;
    
    cursor: pointer;
    background-color: #ffffff;
    display: block;
    padding: 12px 20px;
    width: 100%;
    color: rgb(0,179,241);
    font-weight: 600 ;
    box-sizing: border-box;
    z-index: 100; 
    font-size: 17px;
    margin: 0 0 5px;
    border-left: 5px solid rgb(0,179,241);
    border-bottom: 1px solid #cacaca;
}

.acor-container input{
    display: none;
}
.acor-container label:before {
    content: '▲';
    float: right;
}
.acor-container input:checked + label {
    background-color: white;
    color: rgb(0,179,241);

}
.acor-container input:checked + label:before {
    transition: transform .35s;
    transform: rotate(180deg);
}
.acor-container input:checked + label + .acor-body {
    height: auto;
    margin-top: -5px;
    color: #000;
    padding: 20px 30px 10px;
}


.acor-link{
    display: block;
    color: #919191;
    margin-bottom: 10px;
    text-decoration: none;
}

.acor-link:hover{
    color: rgb(0,179,241);
}
